<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragmentos.MenuPrincipalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="7dp"
        android:weightSum="100"
        android:elevation="4dp"
        android:background="@drawable/fondo_busqueda">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:textColor="@color/black"
            android:fontFamily="@font/font_awesome_6_free_solid_900"
            android:textSize="20sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="\uf0c9"/>

        <EditText
            android:id="@+id/texto_busqueda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="85"
            android:hint="@string/txt_busqueda"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:paddingStart="2dp"
            android:paddingEnd="15dp"
            android:textSize="16sp"
            android:background="@null"
            android:drawableEnd="@drawable/ic_search" />

    </LinearLayout>>

</FrameLayout>